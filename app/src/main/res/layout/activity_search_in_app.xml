<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Базовая система"
            android:textStyle="bold"
            android:textSize="18sp" />
        <!-- Критерий 1 -->
        <CheckBox
            android:id="@+id/checkBoxCriteria1Option1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MS Windows" />

        <CheckBox
            android:id="@+id/checkBoxCriteria1Option2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apple MacOS" />

        <CheckBox
            android:id="@+id/checkBoxCriteria1Option3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Linux" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginVertical="10dp"/>

        <!-- Критерий 2 -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Целевая система"
            android:textStyle="bold"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/checkBoxCriteria2Option1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MS Windows/NTFS" />

        <CheckBox
            android:id="@+id/checkBoxCriteria2Option2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apple MacOS" />

        <CheckBox
            android:id="@+id/checkBoxCriteria2Option3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apple IOS" />

        <CheckBox
            android:id="@+id/checkBoxCriteria2Option4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Android" />

        <CheckBox
            android:id="@+id/checkBoxCriteria2Option6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FAT(exFAT, EXT2/3/4) и пр. ФС" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginVertical="10dp"/>

        <!-- Критерий 3 -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Область анализа"
            android:textStyle="bold"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/checkBoxCriteria3Option1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Сетевой анализ" />

        <CheckBox
            android:id="@+id/checkBoxCriteria3Option2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Поиск данных" />

        <CheckBox
            android:id="@+id/checkBoxCriteria3Option3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Восстановление данных" />

        <CheckBox
            android:id="@+id/checkBoxCriteria3Option4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Обход блокировок системы" />

        <Button
            android:id="@+id/buttonSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Поиск"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"/>

    </LinearLayout>
</ScrollView>
